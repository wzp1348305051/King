<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/layout_scan_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_animTime="1000"
        app:qrcv_borderColor="@color/color_white"
        app:qrcv_borderSize="1dp"
        app:qrcv_cornerColor="@color/color_white"
        app:qrcv_cornerLength="20dp"
        app:qrcv_cornerSize="3dp"
        app:qrcv_maskColor="#55000000"
        app:qrcv_rectWidth="220dp"
        app:qrcv_scanLineColor="@color/color_white"
        app:qrcv_scanLineSize="1dp"
        app:qrcv_topOffset="220dp" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/tv_scan_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/text_icon_back"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_middle" />

</FrameLayout>