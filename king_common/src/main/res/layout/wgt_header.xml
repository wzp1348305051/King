<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_header"
    android:background="@color/bg_white">

    <View
        android:id="@+id/v_header_line"
        style="@style/HorizontalLineStyle"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_header"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/tv_header_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_header"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:lines="1"
            android:minWidth="@dimen/height_header"
            android:paddingStart="@dimen/padding_tinier"
            android:paddingEnd="@dimen/padding_tinier"
            android:textColor="@color/color_grey_dark"
            android:textSize="@dimen/text_middle" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/tv_header_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_header"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:lines="1"
            android:minWidth="@dimen/height_header"
            android:paddingStart="@dimen/padding_tinier"
            android:paddingEnd="@dimen/padding_tinier"
            android:textColor="@color/color_grey_dark"
            android:textSize="@dimen/text_middle" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/tv_header_middle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_header"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/tv_header_right"
            android:layout_toEndOf="@id/tv_header_left"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/color_dark"
            android:textSize="@dimen/text_middle" />

    </RelativeLayout>

</RelativeLayout>